<br>
<div class="container">

<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
        <%= message %><br>
    <% end %>
    </ul>
<% end %>

    <%= form_for @user do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, "size" => 30 %>
    <br>
        <%= f.label :username %>
        <%= f.text_field :username, "size" => 30 %>

    <br>
        <%= f.label :email %>
        <%= f.email_field :email, "size" => 30 %>

    <br>
        <%= f.label :password %>
        <%= f.password_field :password, "size" => 30 %>
    <br></br>
        <%= f.submit %>

    <% end %>

</div>