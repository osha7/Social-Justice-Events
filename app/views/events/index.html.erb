
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Upcoming Events</title>
<link rel="stylesheet" href="#">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css"/>
</head>

<body>
    <div>
        <br>
        <div>
            <%if @user %>
                <%#= @user.name || @user.username %> 
                <h1 style="color:#FFFFFF";>RSVP'd</h1>
                <h3 style="color:#FFFFFF";>Upcoming Events</h3><br>
                <%= render 'searchform' %>
                <br>

            <% else %>

                <div>
                    <br>
                    <% if flash[:message] %>
                    <p style="color:#FF0000";><%= flash[:message] %></p>
                    <% end %>
                    
                </div>

                <div>
                   
                   
                        <h1 class="animate__animated animate__backInUp" style="color:#FFFFFF";>Upcoming Events</h1>
                        <%= link_to "Create New Event", new_event_path %>
                        <%= render 'searchform' %>
                    <br>
                </div>

            <% end %>
        </div>
<br>
        <div>
            <% @events.each do |event| %>
                <% if @user %>
                    <%= link_to event.title, user_event_path(@user, event) %> -
                <% else %>
                    <%= link_to event.title, event_path(event) %> -
                <% end %>
                <% ed = event.date %>
                <%= ed.strftime("%m/%d/%Y") %> -
                <%= event.category %>
                <br>
            <% end %>
        </div>

    </div>
</body>
