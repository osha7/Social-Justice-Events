<div class="container">
<br>


    <h1>Log In</h1>
    <p>Need to join the movement? <%= link_to "Sign Up", '/signup' %></p>
    <br>
    

    <% if flash[:message] %>
    <p style="color:#FF0000";><%= flash[:message] %></p>
    <% end %>

    <%= form_with url:'/sessions', local: true, method: :post do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <br></br>
        <%= f.submit "Log In" %>

    <% end %>

</div>